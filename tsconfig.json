{
	"compilerOptions": {
	  "target": "ES6",
	  "module": "commonjs",
	  "outDir": "./dist",            // Output directory for compiled files
	  "rootDir": "./src",            // Source directory for your TypeScript files
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true
	},
	"include": [
	  "src/**/*"  // Include all TypeScript files from the `src` folder
	]
  }
  